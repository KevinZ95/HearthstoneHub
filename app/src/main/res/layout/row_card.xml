<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/card_view_layout"
            android:layout_width="match_parent"
            android:layout_height="285dp"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/card_icon"
                android:layout_width="162dp"
                android:layout_height="281dp"
                android:src="@mipmap/ic_launcher_round"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/card_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                app:layout_constraintStart_toEndOf="@id/card_icon"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Android Central" />

            <TextView
                android:id="@+id/mana_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/card_name"
                app:layout_constraintStart_toStartOf="@id/card_name"
                app:layout_constraintTop_toBottomOf="@id/card_name"
                tools:text="\@androidcentral" />

            <TextView
                android:id="@+id/health"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/mana_cost"
                app:layout_constraintStart_toStartOf="@+id/mana_cost"
                app:layout_constraintTop_toBottomOf="@+id/mana_cost"
                tools:text="\@androidcentral" />

            <TextView
                android:id="@+id/attack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/health"
                app:layout_constraintStart_toStartOf="@+id/health"
                app:layout_constraintTop_toBottomOf="@+id/health"
                tools:text="\@androidcentral" />

            <TextView
                android:id="@+id/card_description"
                android:layout_width="181dp"
                android:layout_height="56dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/mana_cost"
                app:layout_constraintTop_toBottomOf="@+id/attack"
                tools:text="Android is a mobile operating system developed by Google, based on a modified version of the Linux kernel and other open source software and designed primarily for touchscreen mobile devices such as smartphones and tablets." />

            <TextView
                android:id="@+id/card_flavorText"
                android:layout_width="178dp"
                android:layout_height="25dp"
                android:layout_marginTop="12dp"
                app:layout_constraintEnd_toEndOf="@+id/card_description"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/card_description"
                app:layout_constraintTop_toBottomOf="@+id/card_description"
                tools:text="Android is a mobile operating system developed by Google, based on a modified version of the Linux kernel and other open source software and designed primarily for touchscreen mobile devices such as smartphones and tablets." />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>